    <variable name="FUNCTION" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="ddf" value="dd(__FILE__ . ':' . __LINE__);$END$" description="ddf" toReformat="false" toShortenFQNames="true">
